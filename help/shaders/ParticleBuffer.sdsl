shader ParticleBuffer
{
    rgroup PerMaterial
    {
        stage StructuredBuffer<Particle> Particles;
    }

    struct Particle
    {
        float Age;
        float LifeTime;
        int Id;
        float3 Position;
        float3 Velocity;
        float Size;
        float Mass;
        float4 Color;
        int Cycle;
        float3 AxisX;
        float3 AxisY;
        float3 AxisZ;
        float3 Size3;
    };

};